generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id        Int       @id @default(autoincrement())
  username  String    @unique
  password  String
  fullName  String
  email     String?
  createdAt DateTime  @default(now())
}

model Group {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  level     String?
  description String?
  teacher   String?
  schedule  String?
  maxStudents Int?
  createdAt DateTime  @default(now())
}

model Student {
  id        Int      @id @default(autoincrement())
  fullName  String
  email     String   @unique
  phone     String
  username  String   @unique
  password  String
  status    String   @default("active")
  group     String?
  payments  Payment[]
  attendance Attendance[]
  createdAt DateTime @default(now())
}

model Parent {
  id        Int       @id @default(autoincrement())
  fullName  String
  email     String?
  phone     String?
  createdAt DateTime  @default(now())
}

model Payment {
  id        Int       @id @default(autoincrement())
  studentId Int?
  student   Student?  @relation(fields: [studentId], references: [id])
  studentName String?
  amount    Float
  month     String?
  dueDate   DateTime?
  startDate DateTime?
  endDate   DateTime?
  penaltyPerDay Int   @default(10000)
  paidAt    DateTime?
  note      String?
  status    String?
  createdAt DateTime  @default(now())
}

model Attendance {
  id        Int       @id @default(autoincrement())
  studentId Int?
  student   Student?  @relation(fields: [studentId], references: [id])
  date      DateTime?
  status    String?
  note      String?
  createdAt DateTime  @default(now())
}

model Material {
  id        Int       @id @default(autoincrement())
  title     String
  content   String?
  fileUrl   String?
  fileType  String?
  group     String?
  uploadedBy String?
  uploadedAt DateTime?
  dueDate   DateTime?   // optional deadline for material
  createdAt DateTime  @default(now())
}

model Score {
  id        Int       @id @default(autoincrement())
  studentId Int?
  value     Float?
  subject   String?
  createdAt DateTime  @default(now())
}
